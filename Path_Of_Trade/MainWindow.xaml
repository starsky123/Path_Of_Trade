<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Path_Of_Trade"
        xmlns:hc="https://handyorg.github.io/handycontrol" x:Class="Path_Of_Trade.MainWindow"
        mc:Ignorable="d"
        Title="Path Of Trade" Height="940" Width="742" MouseLeave="Window_MouseLeave" WindowStartupLocation="CenterScreen" WindowStyle="None" MouseRightButtonDown="Window_MouseRightButtonDown" MouseRightButtonUp="Window_MouseRightButtonUp">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TabControl x:Name="tabcontrol">
            <TabItem Header="设置">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <ComboBox x:Name="taglangcombo" HorizontalAlignment="Left" Margin="112,44,0,0" VerticalAlignment="Top" Width="120" hc:TitleElement.Title="界面语言:" hc:TitleElement.TitlePlacement="Left" Style="{DynamicResource ComboBoxExtend}">
                        <ComboBoxItem Content="CN"/>
                        <ComboBoxItem Content="TW"/>
                        <ComboBoxItem Content="KR"/>
                        <ComboBoxItem Content="RS"/>
                    </ComboBox>
                    <ComboBox x:Name="leaguecombo" HorizontalAlignment="Left" Margin="112,100,0,0" VerticalAlignment="Top" Width="167" hc:TitleElement.Title="赛季:" hc:TitleElement.TitlePlacement="Left" Style="{DynamicResource ComboBoxExtend}"/>
                    <Button Content="保存" HorizontalAlignment="Left" Margin="326,224,0,0" VerticalAlignment="Top" Click="Button_Click" Height="28" Width="61"/>
                    <ComboBox x:Name="statslangcombo" HorizontalAlignment="Left" Margin="381,44,0,0" VerticalAlignment="Top" Width="216" hc:TitleElement.Title="词缀语言:" hc:TitleElement.TitlePlacement="Left" Style="{DynamicResource ComboBoxExtend}" >
                        <ComboBoxItem Content="Traditional Chinese"/>
                        <ComboBoxItem Content="Simplified Chinese"/>
                        <ComboBoxItem Content="Korean"/>
                        <ComboBoxItem Content="Russian"/>
                    </ComboBox>
                    <hc:NumericUpDown x:Name="fetchnud" HorizontalAlignment="Left" Margin="381,99,0,0" VerticalAlignment="Top" hc:TitleElement.Title="查价显示数量:" hc:TitleElement.TitlePlacement="Left" Maximum="10" Minimum="1" Style="{DynamicResource NumericUpDownExtend}"/>
                    <hc:ComboBox x:Name="mokeycombo" HorizontalAlignment="Left" Margin="112,160,0,0" VerticalAlignment="Top" Width="120" hc:TitleElement.Title="快捷键:" hc:TitleElement.TitlePlacement="Left" Style="{DynamicResource ComboBoxExtend}">
                        <ComboBoxItem Content="Ctrl"/>
                        <ComboBoxItem Content="Alt"/>
                        <ComboBoxItem Content="Shift"/>
                        <ComboBoxItem Content="Win"/>
                    </hc:ComboBox>
                    <hc:ComboBox x:Name="keycombo" HorizontalAlignment="Left" Margin="237,160,0,0" VerticalAlignment="Top" Width="85" hc:TitleElement.Title="+" hc:TitleElement.TitlePlacement="Left" Style="{DynamicResource ComboBoxExtend}"/>
                    <hc:NumericUpDown x:Name="minnud" HorizontalAlignment="Left" Margin="381,160,0,0" VerticalAlignment="Top" hc:TitleElement.Title="Roll值下限(%):" hc:TitleElement.TitlePlacement="Left" Maximum="100" Minimum="1" Style="{DynamicResource NumericUpDownExtend}"/>
                    <hc:NumericUpDown x:Name="maxnud" HorizontalAlignment="Left" Margin="557,160,0,0" VerticalAlignment="Top" hc:TitleElement.Title="Roll值上限(%):" hc:TitleElement.TitlePlacement="Left" Minimum="100" Style="{DynamicResource NumericUpDownExtend}"/>
                    <Button Content="重新加载" HorizontalAlignment="Left" Margin="172,224,0,0" VerticalAlignment="Top" Click="Button_Click_3"/>
                </Grid>
            </TabItem>
            <TabItem Header="查价">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <GridSplitter Height="100" Width="5" Margin="0,11,0,474"/>
                    <DataGrid x:Name="statsdatagrid" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="243,44,10,503" CanUserAddRows="False" CanUserDeleteRows="False" SelectionUnit="Cell" SelectedCellsChanged="statsdatagrid_SelectedCellsChanged"/>
                    <DataGrid x:Name="tagdatagrid" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="10,44,486,503" CanUserAddRows="False" CanUserDeleteRows="False" SelectionUnit="Cell" SelectedCellsChanged="tagdatagrid_SelectedCellsChanged"/>
                    <TextBox x:Name="nametextbox" HorizontalAlignment="Left" Margin="23,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="192" IsEnabled="False" hc:TitleElement.Title="名字:" hc:TitleElement.TitlePlacement="Left" Style="{DynamicResource TextBoxExtend}"/>
                    <DataGrid x:Name="pricedatagrid" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="10,447,10,39" IsReadOnly="True"/>
                    <Button Content="查价" HorizontalAlignment="Left" Margin="610,407,0,0" Height="31" Width="60" Click="Button_Click_2" VerticalAlignment="Top"/>
                    <CheckBox x:Name="curruptedcheckbox" Content="Currupted" HorizontalAlignment="Left" Margin="419,16,0,0" VerticalAlignment="Top" IsEnabled="False"/>
                    <ComboBox x:Name="currencycombo" HorizontalAlignment="Left" Margin="10,407,0,0" VerticalAlignment="Top" Width="153" hc:TitleElement.Title="通货:" hc:TitleElement.TitlePlacement="Left" Style="{DynamicResource ComboBoxExtend}"/>
                    <CheckBox x:Name="typecheckbox" Content="" HorizontalAlignment="Left" Margin="243,16,0,0" VerticalAlignment="Top"/>
                    <hc:TextBox x:Name="webtextbox" HorizontalAlignment="Left" Margin="18,871,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="517" hc:TitleElement.Title="查询结果:" hc:TitleElement.TitlePlacement="Left" Style="{DynamicResource TextBoxExtend}" IsReadOnly="True"/>
                    <Button Content="打开网页市集" HorizontalAlignment="Left" Margin="554,872,0,0" VerticalAlignment="Top" Click="Button_Click_1"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
